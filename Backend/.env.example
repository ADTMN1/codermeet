# Backend Environment Variables
# Copy this file to .env and update with your secure values

# Database Configuration
MONGO_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/codermeet
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/codermeet

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-random-string
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Security Configuration
SESSION_SECRET=your-super-secret-session-key-min-32-characters-long-random-string
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# External Services
CHAPA_API_KEY=your-chapa-secret-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
